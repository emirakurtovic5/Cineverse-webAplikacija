@model Cineverse.Models.Sjediste

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi</h1>

<h4>Sjedište</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Red" class="control-label"></label>
                <input asp-for="Red" class="form-control" />
                <span asp-validation-for="Red" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolona" class="control-label"></label>
                <input asp-for="Kolona" class="form-control" />
                <span asp-validation-for="Kolona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipSjedista" class="control-label"></label>
                <select asp-for="TipSjedista" class="form-control"></select>
                <span asp-validation-for="TipSjedista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DvoranaId" class="control-label"></label>
                <input asp-for="DvoranaId" class="form-control" />
                <span asp-validation-for="DvoranaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
