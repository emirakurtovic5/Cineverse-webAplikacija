@model Cineverse.Models.Karta

@{
    ViewData["Title"] = "Obriši";
}

<h1>Obriši</h1>

<h3>Jeste li sigurni da želite obrisati ovo?</h3>
<div>
    <h4>Karta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rezervacija)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rezervacija.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sjediste)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sjediste.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na listu</a>
    </form>
</div>
